<!--
<!DOCTYPE root [
<!ENTITY foo "foo_start<foo>foo_inner</foo>foo_end">
<!ENTITY bar "bar_start<bar>bar_inner</bar>bar_end">
<!ENTITY foobar "foobar_start&foo;foobar_between&bar;foobar_end">
]>
<root>outer_start&foobar;outer_end</root>
-->
<?xml-model href="../../../../../../main/resources/rnc/xmlml.rnc" type="application/relax-ng-compact-syntax"?>
<document xmlns="http://www.nkutsche.com/xmlml" line-feed-format="n" 
    id="xmlml_d64"
    document-uri="http://www.nkutsche.com/xmlml/sample-base/entity/complex/recursive-entities.xml"
    xml:base="http://www.nkutsche.com/xmlml/sample-base/entity/complex/recursive-entities.xml">
    <doc-type-decl>
        <ws space="1"/>
        <name>root</name>
        <ws space="1"/>
        <inline>
            <nl/>
            <data><![CDATA[<!ENTITY foo "foo_start<foo>foo_inner</foo>foo_end">]]></data>
            <nl/>
            <data><![CDATA[<!ENTITY bar "bar_start<bar>bar_inner</bar>bar_end">]]></data>
            <nl/>
            <data><![CDATA[<!ENTITY foobar "foobar_start&foo;foobar_between&bar;foobar_end">]]></data>
            <nl/>
        </inline>
    </doc-type-decl>
    <ws nl="1"/>
    <element>
        <name>root</name>
        <attribute default="true" namespace="true">
            <ws space="1" />
            <name>xml</name>
            <eq />
            <value>
                <data>http://www.w3.org/XML/1998/namespace</data>
            </value>
        </attribute>
        <content space="preserve">
            <text append-id="t1">
                <data>outer_start</data>
            </text>
            <entity name="foobar" complex="true">
                <text appending="t1">
                    <data>foobar_start</data>
                </text>
                <entity name="foo" complex="true">
                    <text appending="t1">
                        <data>foo_start</data>
                    </text>
                    <element>
                        <name>foo</name>
                        <attribute nsref="xml"/>
                        <content space="preserve">
                            <text>
                                <data>foo_inner</data>
                            </text>
                        </content>
                    </element>    
                    <text append-id="t5">
                        <data>foo_end</data>
                    </text>
                </entity>
                <text appending="t5">
                    <data>foobar_between</data>
                </text>
                <entity name="bar" complex="true">
                    <text appending="t5">
                        <data>bar_start</data>
                    </text>
                    <element>
                        <name>bar</name>
                        <attribute nsref="xml"/>
                        <content space="preserve">
                            <text>
                                <data>bar_inner</data>
                            </text>
                        </content>
                    </element>    
                    <text append-id="t9">
                        <data>bar_end</data>
                    </text>
                </entity>
                <text appending="t9">
                    <data>foobar_end</data>
                </text>
            </entity>
            <text appending="t9">
                <data>outer_end</data>
            </text>
        </content>
    </element>
</document>
