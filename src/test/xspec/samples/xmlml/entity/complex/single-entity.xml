<!--
<!DOCTYPE root [<!ENTITY foo "foo_start<foo>foo_inner</foo>foo_end">]><root>&foo;</root>
-->
<?xml-model href="../../../../../main/resources/rnc/xmlml.rnc" type="application/relax-ng-compact-syntax"?>
<document xmlns="http://www.nkutsche.com/xmlml" 
    id="xmlml_d65"
    document-uri="http://www.nkutsche.com/xmlml/sample-base/entity/complex/single-entity.xml"
    xml:base="http://www.nkutsche.com/xmlml/sample-base/entity/complex/single-entity.xml">
    <doc-type-decl>
        <ws space="1"/>
        <name>root</name>
        <ws space="1"/>
        <inline>
            <data><![CDATA[<!ENTITY foo "foo_start<foo>foo_inner</foo>foo_end">]]></data>
        </inline>
    </doc-type-decl>
    <element>
        <name>root</name>
        <attribute default="true" namespace="true">
            <ws space="1" />
            <name>xml</name>
            <eq />
            <value>
                <data>http://www.w3.org/XML/1998/namespace</data>
            </value>
        </attribute>
        <content space="preserve">
            <entity name="foo" complex="true">
                <text>
                    <data>foo_start</data>
                </text>
                <element>
                    <name>foo</name>
                    <content space="preserve">
                        <text>
                            <data>foo_inner</data>
                        </text>
                    </content>
                </element>
                <text><data>foo_end</data></text>
            </entity>
        </content>
    </element>
</document>
